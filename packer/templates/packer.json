{
  "builders":
  [
    {
      "type": "qemu",
      "accelerator": "kvm",
      "cpus": 1,
      "memory": 1024,
      "headless": true,

      "iso_url": "https://cloud-images.ubuntu.com/eoan/current/eoan-server-cloudimg-amd64.img",
      "iso_checksum_url": "https://cloud-images.ubuntu.com/eoan/current/SHA256SUMS",
      "disk_image": true,
      "disk_size": "{{ disk_size }}",
      "format": "qcow2",

      "floppy_label": "cidata",
      "floppy_files": [
        "meta-data",
        "user-data"
      ],

      "ssh_username": "ubuntu",
      "ssh_private_key_file": "{{ private_key_file }}",
      "ssh_port": 22,
      "ssh_wait_timeout": "60s",

      "shutdown_command": "sudo shutdown now",
      "disk_compression": true
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "rm ~/.ssh/authorized_keys",
        "sudo truncate -s 0 /etc/machine-id",
        "sudo cloud-init clean --logs"
      ]
    }
  ]
}
